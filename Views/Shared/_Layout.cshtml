<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoFinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinal.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-3">

        <div class="d-flex justify-content-between align-items-center mb-3">
            @if (ViewData["MostrarVolver"] as bool? == true)
            {
                <a href="javascript:history.back()" class="btn btn-secondary">
                    ⬅ Volver
                </a>
            }

            @if (ViewData["MostrarCerrarSesion"] as bool? == true)
            {
                <form asp-controller="Login" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger">
                        🔒 Cerrar Sesión
                    </button>
                </form>
            }
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center mt-5">
        <div class="container">
            © 2025 - Citas Médicas - Todos los derechos reservados
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




