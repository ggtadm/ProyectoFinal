@model List<ProyectoFinal.Models.CitaMedica>

<div class="container mt-5">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary fw-bold">
            üìÖ Citas M√©dicas
        </h2>
        <div class="d-flex gap-2">
            <a asp-action="AgregarEditar" class="btn btn-success shadow-sm">
                ‚ûï Nueva Cita
            </a>
            <a href="#" class="btn btn-outline-secondary shadow-sm" onclick="return confirmarIrAlMenu();">
                ‚¨Ö Men√∫ Principal
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-primary text-center">
                            <tr>
                                <th>Paciente</th>
                                <th>Doctor</th>
                                <th>Fecha</th>
                                <th>Motivo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cita in Model)
                            {
                                <tr>
                                    <td>@cita.Paciente</td>
                                    <td>@cita.NombreDoctor</td>
                                    <td>@cita.Fecha.ToString("dd/MM/yyyy")</td>
                                    <td>@cita.Motivo</td>
                                    <td class="text-center">
                                        <a asp-action="AgregarEditar" asp-route-id="@cita.CitaID" class="btn btn-sm btn-warning me-2 shadow-sm">
                                            ‚úèÔ∏è Editar
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@cita.CitaID"
                                           class="btn btn-sm btn-danger shadow-sm"
                                           onclick="return confirm('¬øEst√° seguro de eliminar esta cita?')">
                                            üóëÔ∏è Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    No hay citas registradas.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarIrAlMenu() {
            if (confirm("¬øEst√°s seguro de que deseas regresar al men√∫ principal?")) {
                window.location.href = "/Home/Index";
                return false;
            }
            return false;
        }
    </script>
}




